generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userID    String   @id
  username  String   @unique
  password  String
  phone     String   @unique
  role      String // e.g., 'owner', 'partner'
  email     String
  fullname  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}
